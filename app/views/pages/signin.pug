extends ../layout.pug

block content
    .container
        .row
            .col-md-5
                form(method="POST",action="/admin/signin/")
                    .modal-body
                        .form-group
                            label(for="signinName") 用户名
                            input#signinName.form-control(name="user[name]",type="text")
                        .form-group
                            label(for="signinPassword") 密码
                            input#signinPassword.form-control(name="user[password]",type="text")
                        .form-group
                            label(for="signinRole") 權限
                            input#signinRole.form-control(name="user[role]",type="text")
                    .modal-footer
                        button.btn.btn-default(type="button",data-dismiss="modal") 关闭
                        button.btn.btn-success(type="submit").bar-fixed-top 提交
