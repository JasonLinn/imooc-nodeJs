extends ../layout.pug

block content
    .container
        .row
            each movie in movies
                .col-md-7
                    embed(src=movie.qq allowFullScreen = "true" quality="high" width="720",height="600",align="middle",type="application/x-shockwave-flash")
                .col-md-5
                    dl.dl-horizontal
                        dt 電影名字
                        dd= movie.title
                        dt 導演
                        dd= movie.doctor
                        dt 國家
                        dd= movie.country
                        dt 語言
                        dd= movie.language
                        dt 上映年份
                        dd= movie.year
                        dt 簡介
                        dd= movie.summary
